<h1 class="text-center">My pets</h1>
<div class="main-container justify-content-center">
  <div class="cards">
    <% @pets.each do |pet| %>
    <div class="card-body">
      <h4 class="card-title" style="color: black; font-size: 21px;"><%= pet.name %> the <%= pet.pet_category %></h4>
      <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= pet.image.attached? ? cl_image_path(pet.image.key) : asset_path('dog') %>');"></div>
      <div class="card-text btn btn-warning" style="border-radius: 5px;"><%= link_to "Check dates", pet %>
      </div>
    <% end %>
  </div>
</div>
<br>
