<%= simple_form_for @pet do |f| %>
  <%= f.input :pet_category %>
  <%= f.input :name %>
  <%= f.input :age %>
  <%= f.input :price_per_day %>
  <%= f.input :description %>
  <%= f.input :image, as: :file %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.button :submit %>
<% end %>


