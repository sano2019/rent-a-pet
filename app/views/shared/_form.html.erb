<%= simple_form_for [@pets, @reservations] do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="reservation[pet_id]" value="">
  <input type="hidden" name="reservation[user_id]" value="true">
  <%= f.input :created_at %>
  <%= f.submit "Choose this pet!", class: "btn btn-primary" %>
<% end %>
